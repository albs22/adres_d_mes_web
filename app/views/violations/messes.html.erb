


<div id="messes_map_canvas">
      <%= javascript_tag "initializeMessMap(32.24260, -110.95956, 'messes_map_canvas');" %> 
      <% @violations.each do |v| %>
        <%= javascript_tag "addMarker('#{v.status}','#{v.description}', #{v.lat}, #{v.lng});" %>
      <% end %>
</div>


<div id="messes-filter">
  <div class="dropdown">
    <div class="btn-group">
      <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
        Filter <span class="caret"></span>
      </button>
      <ul class="dropdown-menu" role="menu">
        <li><%= link_to "Open", messes_path(:sort => "open") %></li>
        <li><%= link_to "Closed", messes_path(:sort => "closed") %></li>
        <li><%= link_to "All", messes_path %></li>
      </ul>
    </div>
  </div>
</div>


<section id="friends">
    <%= render @violations %>
</section>






