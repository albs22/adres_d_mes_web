  <% if signed_in? %>
      <%= link_to 'Edit | ', edit_violation_path(@violation) %>    
      <%= link_to 'Remove | ', @violation, confirm: 'Are you sure you want to remove this mess?', method: :delete, class: 'destroy' %> 
  <% else %>
    <!-- Put status update link here -->

  <% end %>
  
  <%= link_to 'Back to mess list', messes_path %>
</div>


