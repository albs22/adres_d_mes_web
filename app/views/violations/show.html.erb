      <%= link_to 'Remove', @violation, confirm: 'Are you sure you want to lose a friend?', method: :delete, class: 'destroy' %> 
  <% else %>
    <!-- Put status update link here -->

  <% end %>
  
  <%= link_to 'Back to all my vioaltions', violations_path %>
