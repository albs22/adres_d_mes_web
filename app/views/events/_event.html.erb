
<div class="list-event">
  <h3><%= link_to event.title, event %></h3>
  <p><%= event.description %></p>
  <p><%= event.location %></p>
  <p><%= event.date %></p>
  <p>
    <% if signed_in? %>
      <%= link_to 'Edit', edit_event_path(event) %> |
      <%= link_to 'Delete', event, confirm: 'Are you sure you want remove this event?', method: :delete %>
    <% end %>
  </p>
</div>


