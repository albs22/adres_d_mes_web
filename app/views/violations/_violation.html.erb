<div class="friend mess-list-item" id="<%= violation.id %>">
  <div class="front">
    <%= link_to violation, class: 'pic-link' do %>
      <%= image_tag violation.image_before.url(:thumb) %>
    <% end %>
  </div>

  <div class="back">
    <span class="friend-name"><%= violation.description %></span>
    <div class="actions">
      <%= link_to 'Show', violation %>

      <% if signed_in? %>
        <%= link_to 'Edit', edit_violation_path(violation) %>
        <%= link_to 'Delete', violation, confirm: 'Are you sure you want to lose a friend?', method: :delete, class: 'destroy' %>
 
      <% else %>


      <% end %>
    </div>
  </div>
</div>
